generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email   String   @unique
  password   String
  Account    Account?
}

model Account {
  id         Int      @id @default(autoincrement())
  userId     Int      @unique
  balance    Int      
  user       User   @relation(fields: [userId], references: [id])
}